    "/flights/search": {
      "get": {
        "tags": [
          "Flights"
        ],
        "summary": "Your GET endpoint",
        "description": "Search a flight by providing parameters",
        "operationId": "SearchFlight",
        "parameters": [
          {
            "name": "airline",
            "in": "query",
            "description": "Search flights by airline.",
            "schema": {
              "type": "string"
            }
          },
          {
            "name": "departureAirport",
            "in": "query",
            "description": "Search flights by departure airport.",
            "schema": {
              "type": "string"
            }
          },
          {
            "name": "arrivalAirport",
            "in": "query",
            "description": "Search flights by arrival airport.",
            "schema": {
              "type": "string"
            }
          },
          {
            "name": "fromDate",
            "in": "query",
            "description": "Search flights by departure date from.",
            "schema": {
              "type": "string"
            }
          },
          {
            "name": "toDate",
            "in": "query",
            "description": "Search flights by departure date to.",
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
