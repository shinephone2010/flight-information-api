  "paths": {
    "/flights": {
      "get": {
        "tags": [
          "Flights"
        ],
        "summary": "Your GET endpoint",
        "description": "Retrieve all flights.",
        "operationId": "GetFlights",
        "responses": {
          "200": {
            "description": "OK",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "$ref": "#/components/schemas/Flight"
                  }
                },
                "examples": {
                  "Example 1": {
                    "value": [
                      {
                        "id": 1,
                        "flightNumber": "NZ123",
                        "airline": "Air New Zealand",
                        "departureAirport": "AKL",
                        "arrivalAirport": "WLG",
                        "departureTime": "2025-11-26T10:00:00Z",
                        "arrivalTime": "2025-11-26T11:00:00Z",
                        "status": "Scheduled"
                      },
                      {
                        "id": 2,
                        "flightNumber": "NZ456",
                        "airline": "Air New Zealand",
                        "departureAirport": "WLG",
                        "arrivalAirport": "AKL",
                        "departureTime": "2025-12-26T10:00:00Z",
                        "arrivalTime": "2025-12-26T11:00:00Z",
                        "status": "Scheduled"
                      }
                    ]
                  }
                }
              }
            }
          }
        },
        "servers": [
          {
            "url": "/api"
          }
        ]
      },
      "post": {
        "tags": [
          "Flights"
        ],
        "summary": "Your POST endpoint",
        "description": "Create a new flight.",
        "operationId": "CreateFlight",
        "responses": {
          "2XX": {
            "description": "Success",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Flight"
                },
                "examples": {
                  "Example 1": {
                    "value": {
                      "id": 42,
                      "flightNumber": "NZ123",
                      "airline": "Air New Zealand",
                      "departureAirport": "AKL",
                      "arrivalAirport": "WLG",
                      "departureTime": "2025-11-26T10:00:00Z",
                      "arrivalTime": "2025-11-26T11:00:00Z",
                      "status": "Scheduled"
                    }
                  }
                }
              }
            },
            "headers": {
              "Location": {
                "schema": {
                  "type": "string"
                },
                "description": "A Location header pointing to the new resource."
              }
            }
          }
        },
        "servers": [
          {
            "url": "/api"
          }
